<div class="question_form">
<%= form_for ([@question, @question.answers.build]), :html => {data: {q_id: @question.id}} do |f| %>
<br>
<br>
Answer Title: <br />
<%= f.text_field :title, class: "title" %> <br />
<br>
<br>
Answer Content: <br />
<%= f.text_area :content, class: "content" %> <br />
<%= f.submit "Create an answer" %>
<% end %>
</div>